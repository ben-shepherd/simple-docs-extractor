{
  "name": "@ben-shepherd/simple-docs-scraper",
  "type": "module",
  "version": "1.0.0",
  "description": "A simple docs scraper",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ben-shepherd/simple-docs-scraper"
  },
  "license": "ISC",
  "author": "ben.shepherd@gmx.com",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "prepare": "npm run build",
    "test": "jest --passWithNoTests --runInBand",
    "test:watch": "jest --watch --passWithNoTests --runInBand",
    "test:coverage": "jest --coverage --passWithNoTests",
    "build": "tsc --skipLibCheck && npx tsc-alias && npm run copy-templates",
    "copy-templates": "copyfiles -f src/templates/*.md dist/templates",
    "build:watch": "tsc --watch --skipLibCheck",
    "lint": "eslint --ignore-pattern .gitignore \"{src,tests}/**/*.+(ts|js|tsx)\"",
    "lint:fix": "eslint --fix --ignore-pattern .gitignore \"{src,tests}/**/*.+(ts|js|tsx)\"",
    "typecheck": "tsc --noEmit",
    "format": "npx prettier --ignore-path .prettierignore --write \"src/**/*.+(js|ts|json|tsx|mdx)\" --log-level silent",
    "check-exports": "node ./scripts/check-exports.js",
    "check": "npm run format && npm run lint:fix && npm run typecheck && npm run check-exports",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "depcheck": "depcheck",
    "tslint": "tslint -p tsconfig.json",
    "docs:publish": "npm run build && node ./dist/scripts/trigger-publish-docs.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "copyfiles": "^2.4.1",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tslint": "^5.20.1",
    "typescript-eslint": "^8.43.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "glob": "^11.0.3"
  }
}
